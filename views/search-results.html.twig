<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <link href='css/styles.css' type='text/css' rel='stylesheet'>
        <title>CD Search</title>
    </head>
    <body>
        <div class='container'>
            <h1>Search Results:</h1>
            {% for cd in cds %}
                <div class='row'>
                    <div class='col-md-6'>
                        <img src='{{ cd.getCoverArt }}'>
                    </div>
                    <div class='col-md-6'>
                        <p>{{ cd.getTitle }}</p>
                        <p>By {{ cd.getArtist }}</p>
                        <p>${{ cd.getPrice }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </body>
</html>
